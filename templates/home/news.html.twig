{% extends 'base.html.twig' %}
{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>
	<div class="example-wrapper">
		<h1>Les News</h1>
		<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
			<ol class="carousel-indicators">
				<li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
				<li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
				<li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
			</ol>
			<div class="carousel-inner">
				<div class="carousel-item active">
					<img class="d-block w-100" src="{{asset('images/tele.png')}}" alt="First slide">
				</div>
				<div class="carousel-item">
					<img class="d-block w-100" src="{{asset('images/tele2.jpg')}}" alt="Second slide">
				</div>
				<div class="carousel-item">
					<img class="d-block w-100" src="{{asset('images/tele3.jpg')}}" alt="Third slide">
				</div>
			</div>
			<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="sr-only">Previous</span>
			</a>
			<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="sr-only">Next</span>
			</a>
		</div>
	</div>
	<br/><h3>Les 4 séries les plus récentes</h3><br/>
	<div class="row">
	{% for serie in lesSeriesRecentes %}
    	<div class="col-sm-3">
        	<div class="lesSerie">
            	<a href="{{path('app_detailSerie', {id: serie.id})}}"><div class="uneSerie">
                	<img src="{{serie.image}}" style="width:250px;height:300px;border-radius:10px;"><br/><br/>
                	<h4>{{serie.titre|upper}}</h4><br/>
                	<h6>Durée : {{serie.duree|date('H:i:s')}}</h6>
                	<h6>Première Diffusion : {{serie.premiereDiffusion|date('d-m-Y')}}</h6><br/>
            	</div></a>
        	</div><br/><br/>
    	</div>
    {% endfor %}
	</div>
<style>
h3{
	text-align:center;
	text-decoration:underline;
}
.uneSerie{
    border:solid black 3px;
    padding-left:20px;
    padding-right:20px;
    padding-top:20px;
    border-radius:30px;
    background-color:aliceblue;
    color:black;
    width:350px;
	text-align:center;
}
a{
    color:black;
    text-decoration:none;
}
a:hover{
    color:black;
    text-decoration:none;
}
.lesSerie{
    display:flex;
    margin-left:70px;
}
.uneSerie:hover{
    background-color:lightgray;
}
</style>
{% endblock %}