{% extends 'base.html.twig' %}
{% block body %}
<title>{% block title %}Fou2Serie | Supprimer Séries{% endblock %}</title>
<h6>Page normalement disponible uniquement pour un admin du site</h6>
<center><br/><h1>Les {{lesSeries|length}} Series Enregistrer </h1><br/>
<a href="{{path('app_testEntity')}}"><button type="button" class="btn btn-danger">Générer des test</button></a><br/><br/><br/>
<div class="row">
    {% for serie in lesSeries %}
    <div class="col-sm-3">
        <div class="lesSerie">
            <div class="uneSerie">
                <img src="{{serie.image}}" style="width:250px;height:300px;border-radius:10px;"><br/><br/>
                <h4>{{serie.titre|upper}}</h4><br/>
                <h6>Durée : {{serie.duree|date('H:i:s')}}</h6>
                <h6>Première Diffusion : {{serie.premiereDiffusion|date('d-m-Y')}}</h6><br/>

                <form action="{{ path('app_admin_deleteSerie', {id:serie.id})}}", method="POST" onsubmit=return(confirm('ConfirmerLaSuppression'))>
                <input type="hidden" name="_method" id="_method" value="delete">
                <input type="hidden" name="token" id="token" value="{{csrf_token('leToken')}}">
                <button type="submite" class="btn btn-danger">Supprimer</button><br/><br/>
                </form>
                <!-- <a href="{{ path('app_admin_deleteSerie',{id: serie.id}) }}?token={{ csrf_token('leToken') }}"><button type="button" class="btn btn-danger">Supprimer</button></a><br/><br/> -->
            </div>
        </div><br/><br/>
    </div>
    {% endfor %}</center>
</div>
<style>
img{
    border-radius:20px;
}
h4{
    text-decoration:underline;
}
h2{
    text-decoration:underline;
    text-decoration-color:red;
}
h1{
    text-decoration:underline;
    text-decoration-color:red;
    font-size: 60px;
}
.uneSerie{
    border:solid black 3px;
    padding-left:20px;
    padding-right:20px;
    padding-top:20px;
    border-radius:30px;
    background-color:aliceblue;
    color:black;
    width:350px;
}
a{
    color:black;
    text-decoration:none;
}
.resume{
    margin-left:30px;
    margin-right:30px;
}
.lesSerie{
    display:flex;
    margin-left:70px;
}
</style>
{% endblock %}